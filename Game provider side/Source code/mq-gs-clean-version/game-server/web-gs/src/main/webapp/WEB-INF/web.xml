<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <display-name>sb_gs</display-name>

    <context-param>
        <param-name>org.eclipse.jetty.servlet.SessionIdPathParameterName</param-name>
        <param-value>none</param-value>
    </context-param>

    <context-param>
        <param-name>isLog4jAutoInitializationDisabled</param-name>
        <param-value>false</param-value>
    </context-param>

    <listener>
        <listener-class>org.apache.logging.log4j.web.Log4jServletContextListener</listener-class>
    </listener>


    <context-param>
        <param-name>contextClass</param-name>
        <param-value>org.springframework.web.context.support.AnnotationConfigWebApplicationContext</param-value>
    </context-param>

    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>
            com.dgphoenix.casino.gs.GameServerComponentsConfiguration,
            com.dgphoenix.casino.gs.SharedGameServerComponentsConfiguration,
            com.dgphoenix.casino.init.CassandraPersistenceContextConfiguration
        </param-value>
    </context-param>



    <filter>
        <filter-name>ShutdownFilter</filter-name>
        <filter-class>com.dgphoenix.casino.init.ShutdownFilter</filter-class>
        <async-supported>true</async-supported>
    </filter>
    <filter-mapping>
        <filter-name>ShutdownFilter</filter-name>
        <url-pattern>/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>

    <filter>
        <filter-name>log4jServletFilter</filter-name>
        <filter-class>org.apache.logging.log4j.web.Log4jServletFilter</filter-class>
        <async-supported>true</async-supported>
    </filter>
    <filter-mapping>
        <filter-name>log4jServletFilter</filter-name>
        <url-pattern>/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
        <dispatcher>INCLUDE</dispatcher>
        <dispatcher>ERROR</dispatcher>
        <dispatcher>ASYNC</dispatcher><!-- Servlet 3.0 w/ disabled auto-initialization only; not supported in 2.5 -->
    </filter-mapping>

    <filter>
        <filter-name>RequestSchemeFilter</filter-name>
        <filter-class>com.dgphoenix.casino.filters.RequestSchemeFilter</filter-class>
        <async-supported>true</async-supported>
    </filter>
    <filter-mapping>
        <filter-name>RequestSchemeFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>XssSanitizerFilter</filter-name>
        <filter-class>com.dgphoenix.casino.filters.XssSanitizerFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>XssSanitizerFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>urlNormalizationFilter</filter-name>
        <filter-class>com.dgphoenix.casino.filters.UrlNormalizationFilter</filter-class>
        <async-supported>true</async-supported>
    </filter>
    <filter-mapping>
        <filter-name>urlNormalizationFilter</filter-name>
        <url-pattern>/html5pc/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>startGameFilter</filter-name>
        <filter-class>com.dgphoenix.casino.filters.StartGameServletFilter</filter-class>
        <async-supported>true</async-supported>
    </filter>
    <filter-mapping>
        <filter-name>startGameFilter</filter-name>
        <url-pattern>/real/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>startGameFilter</filter-name>
        <url-pattern>/free/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>startGameFilter</filter-name>
        <url-pattern>/adv/free/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>startGameFilter</filter-name>
        <url-pattern>/adv/real/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>viewErrorLogFilter</filter-name>
        <filter-class>com.dgphoenix.casino.filters.ViewErrorLogFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>viewErrorLogFilter</filter-name>
        <url-pattern>*.jsp</url-pattern>
    </filter-mapping>

    <!-- Stress test statistics collector (remove on production!!!) -->
    <servlet>
        <servlet-name>registrator</servlet-name>
        <servlet-class>com.dgphoenix.casino.statistics.RegistratorServlet</servlet-class>
        <init-param>
            <param-name>log</param-name>
            <param-value>/www/logs/tomcat.gs/statistics.log</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>registrator</servlet-name>
        <url-pattern>/Statistics.servlet</url-pattern>
    </servlet-mapping>
    <!-- Stress test statistics collector END -->

    <servlet>
        <servlet-name>ws</servlet-name>
        <servlet-class>com.sun.xml.ws.transport.http.servlet.WSServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>ws</servlet-name>
        <url-pattern>*.ws</url-pattern>
    </servlet-mapping>

    <servlet>
        <display-name>System diagnosis servlet</display-name>
        <servlet-name>SystemDiagnosisServlet</servlet-name>
        <servlet-class>com.dgphoenix.casino.web.system.diagnosis.SystemDiagnosisServlet</servlet-class>
        <load-on-startup>100</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>SystemDiagnosisServlet</servlet-name>
        <url-pattern>/systemdiagnosis.servlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <display-name>Client system diagnosis servlet</display-name>
        <servlet-name>ClientSystemDiagnosisServlet</servlet-name>
        <servlet-class>com.dgphoenix.casino.web.system.diagnosis.ClientSystemDiagnosisServlet</servlet-class>
        <load-on-startup>100</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>ClientSystemDiagnosisServlet</servlet-name>
        <url-pattern>/csdiag.servlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <display-name>Game History servlet</display-name>
        <servlet-name>gamehistoryservlet</servlet-name>
        <servlet-class>com.dgphoenix.casino.web.history.GameHistoryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>gamehistoryservlet</servlet-name>
        <url-pattern>/gsproxy/VisualArchivingBetsV2.servlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>hostCdnApi</servlet-name>
        <servlet-class>com.dgphoenix.casino.web.login.InitCdnHostServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>hostCdnApi</servlet-name>
        <url-pattern>/api/cdnHostInit</url-pattern>
    </servlet-mapping>

    <!--Bonus system-->
    <servlet>
        <servlet-name>awardbonusservlet</servlet-name>
        <servlet-class>com.dgphoenix.casino.web.bonus.AwardBonusServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>awardbonusservlet</servlet-name>
        <url-pattern>/gsproxy/award.servlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>checkbonusservlet</servlet-name>
        <servlet-class>com.dgphoenix.casino.web.bonus.CheckBonusServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>checkbonusservlet</servlet-name>
        <url-pattern>/gsproxy/check.servlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>cancelbonusservlet</servlet-name>
        <servlet-class>com.dgphoenix.casino.web.bonus.CancelBonusServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>cancelbonusservlet</servlet-name>
        <url-pattern>/gsproxy/cancel.servlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>historybonusservlet</servlet-name>
        <servlet-class>com.dgphoenix.casino.web.bonus.GetBonusHistoryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>historybonusservlet</servlet-name>
        <url-pattern>/gsproxy/history.servlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>infobonusservlet</servlet-name>
        <servlet-class>com.dgphoenix.casino.web.bonus.GetBonusInfoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>infobonusservlet</servlet-name>
        <url-pattern>/gsproxy/info.servlet</url-pattern>
    </servlet-mapping>
    <!--Bonus system-->

    <!-- Statistics servlet (remove on production!!!) -->
    <servlet>
        <display-name>Statistics servlet</display-name>
        <servlet-name>statistics</servlet-name>
        <servlet-class>com.dgphoenix.casino.common.web.statistics.RawStatisticsServlet</servlet-class>
        <init-param>
            <param-name>enabled</param-name>
            <param-value>true</param-value>
        </init-param>
        <load-on-startup>100</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>statistics</servlet-name>
        <url-pattern>support/stat</url-pattern>
    </servlet-mapping>

    <jsp-config>
        <taglib>
            <taglib-uri>/WEB-INF/struts-tiles.tld</taglib-uri>
            <taglib-location>/WEB-INF/struts-tiles.tld</taglib-location>
        </taglib>
        <jsp-property-group>
            <url-pattern>*.jsp</url-pattern>
            <trim-directive-whitespaces>true</trim-directive-whitespaces>
        </jsp-property-group>
    </jsp-config>

    <mime-mapping>
        <extension>wsdl</extension>
        <mime-type>text/xml</mime-type>
    </mime-mapping>

    <!-- STRUTS ACTION -->
    <servlet>
        <servlet-name>action</servlet-name>
        <servlet-class>com.dgphoenix.casino.config.ForwardActionServlet</servlet-class>
        <init-param>
            <param-name>application</param-name>
            <param-value>ApplicationResources</param-value>
        </init-param>
        <init-param>
            <param-name>config</param-name>
            <param-value>/WEB-INF/struts-config.xml</param-value>
        </init-param>
        <init-param>
            <param-name>chainConfig</param-name>
            <param-value>org/apache/struts/tiles/chain-config.xml</param-value>
        </init-param>
        <load-on-startup>2</load-on-startup>
        <async-supported>true</async-supported>
    </servlet>

    <servlet-mapping>
        <servlet-name>action</servlet-name>
        <url-pattern>*.do</url-pattern>
    </servlet-mapping>

    <!-- STRUTS ACTION END-->
    
    <!-- Default servlet for static content (HTML5 games, etc) -->
    <servlet>
        <servlet-name>default</servlet-name>
        <servlet-class>org.eclipse.jetty.servlet.DefaultServlet</servlet-class>
        <init-param>
            <param-name>dirAllowed</param-name>
            <param-value>false</param-value>
        </init-param>
        <init-param>
            <param-name>acceptRanges</param-name>
            <param-value>true</param-value>
        </init-param>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/html5pc/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/flash/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/cdn/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/css/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/js/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/images/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>*.json</url-pattern>
    </servlet-mapping>
    <!-- Default servlet END -->
    
    <servlet>
        <servlet-name>MainWebSocketServlet</servlet-name>
        <servlet-class>com.dgphoenix.casino.websocket.WebSocketServletImpl</servlet-class>
        <load-on-startup>100</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>MainWebSocketServlet</servlet-name>
        <url-pattern>/webSocket</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>MQTournamentLobbyWebSocketServlet</servlet-name>
        <servlet-class>com.dgphoenix.casino.websocket.tournaments.TournamentWebSocketServlet</servlet-class>
        <load-on-startup>100</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>MQTournamentLobbyWebSocketServlet</servlet-name>
        <url-pattern>/tournamentWebSocket</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>HttpCallInfoFilter</filter-name>
        <filter-class>com.dgphoenix.casino.filters.HttpCallInfoFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>HttpCallInfoFilter</filter-name>
        <url-pattern>*.servlet</url-pattern>
        <url-pattern>*.game</url-pattern>
        <url-pattern>*.do</url-pattern>
    </filter-mapping>
</web-app>
