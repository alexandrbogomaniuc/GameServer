import AtlasConfig from '../../../../config/AtlasConfig';
import AtlasSprite from '../../../../../../../common/PIXI/src/display/AtlasSprite';
import { APP } from '../../../../../../../common/PIXI/src/globals';

let SparkExplode = {
	textures: {
		sparkExplode: null		
	}
};

SparkExplode.setTexture = function (name, imageNames, configs, path) {
	if(!SparkExplode.textures[name]){
		SparkExplode.textures[name] = [];

		if(!Array.isArray(imageNames)) imageNames = [imageNames];
		if(!Array.isArray(configs)) configs = [configs];

		let assets = [];
		imageNames.forEach(function(item){assets.push(APP.library.getAsset(item))});

		SparkExplode.textures[name] = AtlasSprite.getFrames(assets, configs, path);
		SparkExplode.textures[name].sort(function(a, b){if(a._atlasName < b._atlasName) return 1; else return -1});
	}
};

SparkExplode.getSparkExplodeTextures = function()
{
	SparkExplode.setTexture('sparkExplode', 'death/bomb/sparkles/spark_explode', AtlasConfig.SparkExplode, '');
	return this.textures.sparkExplode;
}

export default SparkExplode;