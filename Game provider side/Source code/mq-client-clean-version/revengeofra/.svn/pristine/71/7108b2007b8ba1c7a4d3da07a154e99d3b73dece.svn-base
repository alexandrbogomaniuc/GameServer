import ExternalCommunicator from '../../../../common/PIXI/src/external/betsoftgaming/ExternalCommunicator';
import {GAME_MESSAGES, LOBBY_MESSAGES} from '../../../../common/PIXI/src/external/betsoftgaming/ExternalCommunicator';

/** @ignore */
class GameExternalCommunicator extends ExternalCommunicator
{
	static get LOBBY_MESSAGE_RECEIVED()
	{
		return "onLobbyMessageReceived";
	}

	constructor()
	{
		super();
	}

	handleMessage(type, data)
	{
		super.handleMessage(type, data);

		switch (type)
		{
			case LOBBY_MESSAGES.PLAYER_INFO_UPDATED:
			case LOBBY_MESSAGES.EXTERNAL_ASSETS_UPDATED:
			case LOBBY_MESSAGES.BACK_TO_GAME:
			case LOBBY_MESSAGES.SOUND_SETTINGS_CHANGED:
			case LOBBY_MESSAGES.AVATAR_UPDATED:
			case LOBBY_MESSAGES.NOTIFICATION_ACTIVATED:
			case LOBBY_MESSAGES.NOTIFICATION_DEACTIVATED:
			case LOBBY_MESSAGES.SECONDARY_SCREEN_DEACTIVATED:
			case LOBBY_MESSAGES.SECONDARY_SCREEN_ACTIVATED:
			case LOBBY_MESSAGES.GAME_URL_UPDATED:
			case LOBBY_MESSAGES.SERVER_ERROR_MESSAGE_RECIEVED:
			case LOBBY_MESSAGES.GAME_REFRESH_BALANCE_REQUIRED:
			case LOBBY_MESSAGES.BACK_TO_LOBBY:
			case LOBBY_MESSAGES.DIALOG_ACTIVATED:
			case LOBBY_MESSAGES.DIALOG_DEACTIVATED:
			case LOBBY_MESSAGES.WEAPON_SELECTED:
			case LOBBY_MESSAGES.FIRE_SETTINGS_CLICKED:
			case LOBBY_MESSAGES.CONTEXT_MENU:
			case LOBBY_MESSAGES.LOBBY_CONNECTION_STATE:
			case LOBBY_MESSAGES.LOBBY_VISIBILITY_CHANGED:
			case LOBBY_MESSAGES.FORCE_SIT_OUT_EXIT_CONFIRMED:
			case LOBBY_MESSAGES.CHOOSE_WEAPON_SCREEN_CHANGED:
			case LOBBY_MESSAGES.LOBBY_LOADING_ERROR:
			case LOBBY_MESSAGES.BACKGROUND_FADE_START:
			case LOBBY_MESSAGES.MID_ROUND_COMPENSATE_SW_EXIT_CONFIRMED:
			case LOBBY_MESSAGES.PROFILES_VALUES_INITIALIZATION:
			case LOBBY_MESSAGES.KEYBOARD_BUTTON_CLICKED:
			case LOBBY_MESSAGES.DEBUG_MESSAGE:
			case LOBBY_MESSAGES.MID_ROUND_EXIT_CONFIRMED:
			case LOBBY_MESSAGES.KEYS_ACTUAL_DATA:
			case LOBBY_MESSAGES.BUY_AMMO_FAILED_RETRY_CONFIRMED:
			case LOBBY_MESSAGES.BUY_AMMO_FAILED_EXIT_ROOM_REQUESTED:
			case LOBBY_MESSAGES.WEBGL_STATE_INFO:
			case LOBBY_MESSAGES.MID_ROUND_EXIT_DIALOG_ACTIVATED:
			case LOBBY_MESSAGES.MID_ROUND_EXIT_DIALOG_DEACTIVATED:
			case LOBBY_MESSAGES.GAME_SETTINGS_INITIALIZATION:
			case LOBBY_MESSAGES.WEBGL_CONTEXT_LOST:
			case LOBBY_MESSAGES.EVENT_ON_BONUS_COMPLETION_CONFIRMED:
			case LOBBY_MESSAGES.BONUS_RESTART_REQUIRED:
			case LOBBY_MESSAGES.FRB_RESTART_REQUIRED:
			case LOBBY_MESSAGES.ENTER_LOBBY_MESSAGE_RECEIVED:
			case LOBBY_MESSAGES.TOURNAMENT_COMEPLETED_WITH_NO_REBUYS:			
			case LOBBY_MESSAGES.FRB_SHOTS_UPDATED:
			case LOBBY_MESSAGES.BONUS_CANCELED_DURING_LOAD:
			case LOBBY_MESSAGES.BONUS_CANCEL_ROOM_RELOAD:
			case LOBBY_MESSAGES.BONUS_DIALOG_DEACTIVATED:
			case LOBBY_MESSAGES.BONUS_DIALOG_ACTIVATED:
			case LOBBY_MESSAGES.FRB_DIALOG_DEACTIVATED:
			case LOBBY_MESSAGES.FRB_DIALOG_ACTIVATED:
			case LOBBY_MESSAGES.TOURNAMENT_STATE_CHANGED:
			case LOBBY_MESSAGES.TOURNAMENT_REBUY_CONFIRMED:
			case LOBBY_MESSAGES.GAME_NEM_FOR_ROOM_REQUEST_CONFIRMED:
				this.emit(GameExternalCommunicator.LOBBY_MESSAGE_RECEIVED, {type: type, data: data});
				break;
		}
	}
}

export {GAME_MESSAGES, LOBBY_MESSAGES}
export default GameExternalCommunicator;