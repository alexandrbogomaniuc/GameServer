import ExternalCommunicator from '../../../../common/PIXI/src/external/betsoftgaming/ExternalCommunicator';
import {GAME_MESSAGES, LOBBY_MESSAGES} from '../../../../common/PIXI/src/external/betsoftgaming/ExternalCommunicator';

/** @ignore */
class LobbyExternalCommunicator extends ExternalCommunicator
{
	static get GAME_MESSAGE_RECEIVED()
	{
		return "onGameMessageReceived";
	}

	constructor()
	{
		super();
	}

	handleMessage(type, data)
	{
		super.handleMessage(type, data);

		switch (type)
		{
			case GAME_MESSAGES.PRELOADER_READY:
			case GAME_MESSAGES.GAME_LOADING_ERROR:
			case GAME_MESSAGES.APPLICATION_READY:
			case GAME_MESSAGES.BACK_TO_LOBBY:
			case GAME_MESSAGES.GAME_STARTED:
			case GAME_MESSAGES.GAME_SOUND_BUTTON_CLICKED:
			case GAME_MESSAGES.GAME_ROUND_STATE_CHANGED:
			case GAME_MESSAGES.PLAYER_INFO_UPDATED:
			case GAME_MESSAGES.REFRESH_COMMON_PANEL_REQUIRED:
			case GAME_MESSAGES.SERVER_CONNECTION_OPENED:
			case GAME_MESSAGES.SERVER_CONNECTION_CLOSED:
			case GAME_MESSAGES.SERVER_ERROR_MESSAGE_RECIEVED:
			case GAME_MESSAGES.RESTORED_AFTER_UNREASONABLE_REQUEST:
			case GAME_MESSAGES.RESTORE_AFTER_UNREASONABLE_REQUEST_CANCELED:
			case GAME_MESSAGES.SERVER_BALANCE_UPDATED_MESSAGE_RECIEVED:
			case GAME_MESSAGES.ON_SIT_IN_RESPONSE:
			case GAME_MESSAGES.ON_SIT_OUT_REQUIRED:
			case GAME_MESSAGES.NOT_ENOUGH_MONEY_DIALOG_REQUIRED:
			case GAME_MESSAGES.GAME_RECOVERY_ON_CONNECTION_LOST_STARTED:
			case GAME_MESSAGES.WEAPONS_UPDATED:
			case GAME_MESSAGES.WEAPONS_INTERACTION_CHANGED:
			case GAME_MESSAGES.WEAPON_SELECTED:
			case GAME_MESSAGES.GAME_POINTER_DOWN:
			case GAME_MESSAGES.TOOLTIP_STATE_CHANGE:
			case GAME_MESSAGES.SHINE_TOOLTIP_BUTTON:
			case GAME_MESSAGES.CONTEXT_MENU:
			case GAME_MESSAGES.ROOM_CLOSED:
			case GAME_MESSAGES.ROUND_RESULT_ACTIVATION_STATE_CHANGE:
			case GAME_MESSAGES.CHECK_LOBBY_CONNECTION:
			case GAME_MESSAGES.GAME_SCRIPT_LOAD_ERROR:
			case GAME_MESSAGES.EVENT_ON_FORCE_SIT_OUT_REQUIRED:
			case GAME_MESSAGES.FIRE_SETTINGS_STATE_CHANGED:
			case GAME_MESSAGES.MID_ROUND_COMPENSATE_SW_REQUIRED:
			case GAME_MESSAGES.KEYBOARD_BUTTON_CLICKED:
			case GAME_MESSAGES.PICKS_UP_SPECIAL_WEAPONS_FIRST_TIME_REQUIRED:
			case GAME_MESSAGES.MID_ROUND_EXIT_REQUIRED:
			case GAME_MESSAGES.ON_BUY_AMMO_RETRY_DIALOG_APPEAR_REQUIRED:
			case GAME_MESSAGES.ON_BUY_AMMO_RETRY_DIALOG_DISAPPEAR_REQUIRED:
			case GAME_MESSAGES.KEYS_ACTUAL_DATA_REQUIRED:
			case GAME_MESSAGES.ROUND_RESULT_ACTIVATED:
			case GAME_MESSAGES.WEBGL_CONTEXT_LOST:
			case GAME_MESSAGES.RUNTIME_ERROR:
			case GAME_MESSAGES.EVENT_ON_BONUS_STATUS_CHANGED_RESPONSE:
			case GAME_MESSAGES.ON_FRB_ENDED_RESPONSE:
			case GAME_MESSAGES.GAME_BONUS_COMPLETION_STARTED:
			case GAME_MESSAGES.FRB_SHOTS_UPDATE_REQUIRED:
			case GAME_MESSAGES.TOURNAMENT_STATE_CHANGED:
			case GAME_MESSAGES.BUY_IN_RESPONSE_RECIEVED:
			case GAME_MESSAGES.RE_BUY_RESPONSE_RECIEVED:			
			case GAME_MESSAGES.TOURNAMENT_REBUY_COUNT_UPDATED:			
				this.emit(LobbyExternalCommunicator.GAME_MESSAGE_RECEIVED, {type: type, data: data});
				break;
		}
	}
}

export {GAME_MESSAGES, LOBBY_MESSAGES}
export default LobbyExternalCommunicator;