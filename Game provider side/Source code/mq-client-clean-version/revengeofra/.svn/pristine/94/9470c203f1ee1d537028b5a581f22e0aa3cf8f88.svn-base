import PromotionsScreenActivePromosListItem from './PromotionsScreenActivePromosListItem';
import { List, ITEMS_DIRECTION } from '../../player_collection/list/List';

class PromotionsScreenActivePromosList extends List
{
	static get ON_PROMO_DETAILS_BTN_CLICKED()		{ return PromotionsScreenActivePromosListItem.ON_PROMO_DETAILS_BTN_CLICKED }

	constructor()
	{
		super();
	}

	_init ()
	{
		this._direction = ITEMS_DIRECTION.HORIZONTAL;

		super._init();
	}

	_generateNewItemInstance(itemInfo)
	{
		let item = new PromotionsScreenActivePromosListItem(itemInfo);
		item.on(PromotionsScreenActivePromosListItem.ON_PROMO_DETAILS_BTN_CLICKED, this._onPromoDetailsBtnClicked, this);

		return item;
	}

	_onPromoDetailsBtnClicked(event)
	{
		this.emit(PromotionsScreenActivePromosList.ON_PROMO_DETAILS_BTN_CLICKED, {promoInfo:event.target.info})
	}

	get _itemsDistance()
	{
		return 0;
	}
}

export default PromotionsScreenActivePromosList